.chat-side
  .side__header
    %h3.side__header__box
      = current_user.name
    %ul.side__header__action
      %li.side__header__action__group
        = link_to new_group_path do
          = fa_icon 'pencil-square-o', class: 'icon'
      %li.side__header__action__user
        = link_to "/users/#{current_user.id}/edit" do
          = fa_icon 'cog', class: 'icon'
       
  .groups
    - current_user.groups.each do |group|
      .group
        = link_to group_messages_path(group) do
          .groups__group-name
            = group.name
          .groups__group-message
            = group.show_last_message